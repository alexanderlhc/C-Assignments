        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20210224_L06_Ex4_DockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

  <DockPanel>
    <Button DockPanel.Dock="Left" x:Name="Left" Click="Button_Click">Left</Button>
    <Button DockPanel.Dock="Top" x:Name="Top" Click="Button_Click">Top</Button>
    <Button DockPanel.Dock="Right" x:Name="Right" Click="Button_Click">Right</Button>
    <Button DockPanel.Dock="Bottom" x:Name="Bottom" Click="Button_Click">Bottom</Button>
    <TextBox x:Name="txtBox" />
  </DockPanel>
</Window>
